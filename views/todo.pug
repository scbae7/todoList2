  body
    include ./modal/addTodoModal.pug
    include ./modal/deleteTodoModal.pug
    .container.todoContainer
      .navSection
        button.tagSearchBtn # 
          span 태그로 검색
        button#openModalBtn.myPaegBtn
          span.myPageIcon
          span MY
        button.logout LOG OUT
      .processSection
        .processLabel 진행률
        .processNumber 80%
        .processBar
          .barFull 
            span.barNumber
      .headerSection
        .headerTitle
          span.headerIcon
          span TODO LIST
        if (fUserName)
            .headerHello= fUserName.userName + '님 안녕하세요'
        else
            .headerHello 회원 이름이 없어
      .todoHeader
          .todoCont TODO
          .addCont + NEW
          .DoneCont DONE  
      .todoSection
        
        each todo in todos
          - if (todo)
            .todoRow(data-todoNum=todo.todo_num)
              - if (todo.due_date)
                - var dueDate = new Date(todo.due_date);
                - var formattedDueDate = dueDate.toLocaleDateString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit' });
                .rowDate= formattedDueDate
              - if (todo.todolist_cont)
                .rowDesc= todo.todolist_cont
              .rowTag
                - if (todo.todo_tag)
                  each tag in todo.todo_tag.split(',')
                    span.rowTagData= tag.trim()
              button.rowControl.deleteTodoBtn
                  span.rowControlIcon
